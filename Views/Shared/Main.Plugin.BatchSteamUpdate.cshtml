@using TCAdmin.SDK.Objects
@using TCAdminBatchSteamUpdate.Controllers
@{
    var user = TCAdmin.SDK.Session.GetCurrentUser();
    var anySteamGames = false;
    if (user.UserType != UserType.Admin)
    {
        var services = SteamUpdateController.GetCurrentUserServices();
        anySteamGames = services.Any(x => x.Steam.EnableSteamCmd || x.Steam.EnableSteamUpdateTool);
    }
}

@if (!anySteamGames)
{
    <text>
        <style>
            #page_d3b2aa93-7e2b-4e0d-8080-67d14b2fa8a9_1020 { display:none}
        </style>
    </text>
}